<?xml version="1.0" encoding="UTF8"?>
<!DOCTYPE EvaluatorConfiguration SYSTEM "file:c:/Documents and Settings/rhannus/workspace/evaluator/xml/evaluator.dtd">
<!--
	This configuration runs a 2 minute test against the scluster configuration.
	It should create a load on the backend databases.
	
	All the names enclosed in '@' must be changed to the actual names used
	in your system.
-->
<EvaluatorConfiguration name="scluster" testDuration="120" statusInterval="1"
	htmlFile="scluster.html" autoCommit="true">
	
	<Database driver="com.continuent.scluster.driver.Driver" 
		url="jdbc:scluster://@controller1@,@controller2@/@virtualdatabase@" 
		user="@virtualdatabase_login@" 
		password="@virtualdatabase_password@" timestampType="datetime"/>	
	 
	 
	<TableGroup name="tbm" size="100">
		<ThreadGroup name="A" threadCount="10" thinkTime="0"
			updates="7" deletes="1" inserts="2" readSize="10"
			rampUpInterval="5" rampUpIncrement="10" queryFormat="sql"/>
	</TableGroup>
</EvaluatorConfiguration>